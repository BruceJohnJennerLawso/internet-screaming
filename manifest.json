


{
	"manifest_version": 2,
    "name": "internet-screaming",
    "description": "find all instances of 'internet streaming' in a webpage and replace them with 'internet screaming'",
    "_comment": "Because fuck you, thats why",
    "version": "0.1",
    "content_scripts": 
    [
        {
            "matches": 
            [
                "*://*/*"
            ],
            "js": 
            [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}
